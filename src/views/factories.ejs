
<!DOCTYPE html>
<html>
<head>
  <title>Fabrieken Overzicht</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <a class="navbar-brand" href="/">Porsche App</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" href="/">Porsches</a></li>
        <li class="nav-item"><a class="nav-link active" href="/factories">Fabrieken</a></li>
      </ul>
      <ul class="navbar-nav">
        <% if (user && user.role === "ADMIN") { %>
          <li class="nav-item"><a class="nav-link" href="/logout">Uitloggen</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/register">Registreren</a></li>
        <% } %>
      </ul>
    </div>
  </nav>

  <div class="container mt-4">
    <h1>Fabrieken Overzicht</h1>
    <input type="text" id="filterInput" placeholder="Filter op naam..." class="form-control my-3">
    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th class="sortable" data-key="id">ID</th>
          <th class="sortable" data-key="name">Naam</th>
          <th class="sortable" data-key="location">Locatie</th>
          <th>Opgericht</th>
          <th>Elektrisch</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% factories.forEach(f => { %>
          <tr>
            <td><%= f.id %></td>
            <td><%= f.name %></td>
            <td><%= f.location %></td>
            <td><%= f.founded %></td>
            <td><%= f.isElectricCertified ? "‚úÖ" : "‚ùå" %></td>
            <td>
              <a href="/factory?id=<%= f.id %>" class="btn btn-primary btn-sm me-2">Bekijk</a>
              <% if (user && user.role === "ADMIN") { %>
                <a href="/edit-factory?id=<%= f.id %>" class="btn btn-warning btn-sm" title="Bewerken">‚úèÔ∏è</a>
                <form method="POST" action="/delete-factory" style="display:inline;" onsubmit="return confirm('Weet je zeker dat je deze fabriek wil verwijderen?');">
                  <input type="hidden" name="id" value="<%= f.id %>">
                  <button type="submit" class="btn btn-danger btn-sm" title="Verwijderen">üóë</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

<script>
  let rows = Array.from(document.querySelectorAll("tbody tr"));
  let currentSort = { key: null, asc: true };

  function renderTable(filteredRows) {
    const tbody = document.querySelector("tbody");
    tbody.innerHTML = "";
    filteredRows.forEach(row => tbody.appendChild(row));
  }

  document.getElementById("filterInput")?.addEventListener("input", (e) => {
    const val = e.target.value.toLowerCase();
    const filtered = rows.filter(row => row.innerText.toLowerCase().includes(val));
    renderTable(filtered);
  });

  document.querySelectorAll("th.sortable")?.forEach(th => {
    th.addEventListener("click", () => {
      const key = th.dataset.key;
      const index = Array.from(th.parentNode.children).indexOf(th);

      currentSort.asc = currentSort.key === key ? !currentSort.asc : true;
      currentSort.key = key;

      const sorted = [...rows].sort((a, b) => {
        let aVal = a.children[index].innerText.toLowerCase();
        let bVal = b.children[index].innerText.toLowerCase();
        return currentSort.asc ? aVal.localeCompare(bVal) : bVal.localeCompare(aVal);
      });

      renderTable(sorted);
    });
  });
</script>

</body>
</html>
